<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/flashcard_question"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center"
        android:text="Who is the 44th President of the United States?"
        android:textColor="#5A5E6B"
        android:textSize="40sp"
        android:background="@drawable/card_background" /> <!-- Remplacez cette ligne par android:background="@color/blue_pale" -->



    <TextView
        android:id="@+id/flashcard_answer"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FDBFB7"
        android:textAlignment="center"
        android:layout_alignBottom="@id/flashcard_question"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-344dp"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:text="Barack Obama"
        android:textColor="#1560BD"
        android:textSize="40sp" />



    <TextView
        android:id="@+id/flashcard_answer2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FDBFB7"
        android:textAlignment="center"
        android:layout_below="@+id/flashcard_answer"
        android:layout_marginStart="20dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="Bill Clinton"
        android:textColor="#1560BD"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/flashcard_answer3"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FDBFB7"
        android:textAlignment="center"
        android:layout_below="@+id/flashcard_answer2"
        android:layout_marginStart="20dp"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="20dp"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="George H. Bush"
        android:textColor="#1560BD"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/toggle_choices_visibility"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/flashcard_answer3"
        android:layout_centerInParent="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/iconmonstr_eye_off_lined" />

    <ImageView
        android:id="@+id/toggle123"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_below="@+id/flashcard_answer3"
        android:layout_centerInParent="true"
        android:layout_marginTop="38dp"
        android:src="@drawable/iconmonstr_eye_lined" />

</RelativeLayout>